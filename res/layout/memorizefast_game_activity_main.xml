<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_light_blue"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MiniGameMenuActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:text="MEMORIZE FAST"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/memorize_fast_chance_first"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/memorize_fast_true_first"
        android:layout_below="@+id/memorize_fast_true_first"
        android:layout_marginTop="38dp" 
        android:background="@drawable/memorize_hit_choose" />

    <Button
        android:id="@+id/memorize_fast_chance_fourth"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/memorize_fast_chance_third"
        android:layout_alignRight="@+id/memorize_fast_true_fourth"
		android:background="@drawable/memorize_hit_choose" />

    <Button
        android:id="@+id/memorize_fast_color_red"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/memorize_fast_chance_first"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="46dp"
        android:background="@drawable/memorize_hit_square_red" />

    <Button
        android:id="@+id/memorize_fast_color_blue"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/memorize_fast_color_green"
        android:layout_alignBottom="@+id/memorize_fast_color_green"
        android:layout_alignLeft="@+id/memorize_fast_chance_fourth"
        android:background="@drawable/memorize_hit_square_blue" />

    <Button
        android:id="@+id/memorize_fast_true_first"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="84dp"
        android:layout_toLeftOf="@+id/textView1"
        android:background="@drawable/memorize_hit_choose" />

    <Button
        android:id="@+id/memorize_fast_true_fourth"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/memorize_fast_chance_first"
        android:layout_toRightOf="@+id/textView1"
        android:background="@drawable/memorize_hit_choose" />

    <Button
        android:id="@+id/memorize_fast_color_green"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/memorize_fast_color_yellow"
        android:layout_alignBottom="@+id/memorize_fast_color_yellow"
        android:layout_alignRight="@+id/textView1"
        android:layout_marginRight="23dp"
        android:background="@drawable/memorize_hit_square_green" />

    <Button
        android:id="@+id/memorize_fast_chance_second"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/memorize_fast_chance_first"
        android:layout_alignBottom="@+id/memorize_fast_chance_first"
        android:layout_marginRight="22dp"
        android:layout_toLeftOf="@+id/memorize_fast_color_green"
        android:background="@drawable/memorize_hit_choose" />

    <Button
        android:id="@+id/memorize_fast_color_yellow"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/memorize_fast_color_red"
        android:layout_alignBottom="@+id/memorize_fast_color_red"
        android:layout_alignLeft="@+id/memorize_fast_chance_second"
        android:background="@drawable/memorize_hit_square_yellow" />

    <Button
        android:id="@+id/memorize_fast_true_second"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/memorize_fast_chance_first"
        android:layout_alignLeft="@+id/memorize_fast_chance_second"
        android:background="@drawable/memorize_hit_choose" />

    <Button
        android:id="@+id/memorize_fast_true_third"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/memorize_fast_chance_first"
        android:layout_alignLeft="@+id/memorize_fast_color_green"
        android:background="@drawable/memorize_hit_choose" />

    <Button
        android:id="@+id/memorize_fast_chance_third"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/memorize_fast_chance_second"
        android:layout_alignBottom="@+id/memorize_fast_chance_second"
        android:layout_toRightOf="@+id/memorize_fast_chance_second"
        android:background="@drawable/memorize_hit_choose" />

    <TextView
        android:id="@+id/memorize_fast_counterdown"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView1"
        android:text="00"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>