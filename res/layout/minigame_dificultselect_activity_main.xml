<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MiniGameDifficultLevelActivity" >

    <Button
        android:id="@+id/hard_level_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/hard" />

    <Button
        android:id="@+id/normal_level_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/hard_level_bt"
        android:layout_below="@+id/hard_level_bt" 
        android:background="@drawable/normal" />

    <Button
        android:id="@+id/easy_level_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/normal_level_bt"
        android:layout_below="@+id/normal_level_bt" 
        android:background="@drawable/easy" />

    <TextView
        android:id="@+id/selectthesificultlevel_tx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/hard_level_bt"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        android:text="Select the Difficult Level"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>