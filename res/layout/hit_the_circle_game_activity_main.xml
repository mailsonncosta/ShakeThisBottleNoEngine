<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_light_blue"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MiniGameMenuActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:text="HIT THE CIRCLES" />

    <Button
        android:id="@+id/hit_circle_01"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/memorize_hit_square_red"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="100dp"
        android:layout_toLeftOf="@+id/textView1"/>

    <Button
        android:id="@+id/hit_circle_02"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/memorize_hit_square_red"
        android:layout_alignBottom="@+id/hit_circle_01"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/hit_circle_03"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/memorize_hit_square_red"
        android:layout_alignBaseline="@+id/hit_circle_02"
        android:layout_alignBottom="@+id/hit_circle_02"
        android:layout_toRightOf="@+id/textView1" />

    <Button
        android:id="@+id/hit_circle_04"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/memorize_hit_square_red"
        android:layout_alignLeft="@+id/hit_circle_01"
        android:layout_below="@+id/hit_circle_01"
        android:layout_marginTop="30dp" />

    <Button
        android:id="@+id/hit_circle_05"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/memorize_hit_square_red"
        android:layout_alignBottom="@+id/hit_circle_04"
        android:layout_alignRight="@+id/hit_circle_02" />

    <Button
        android:id="@+id/hit_circle_06"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/memorize_hit_square_red"
        android:layout_alignBaseline="@+id/hit_circle_05"
        android:layout_alignBottom="@+id/hit_circle_05"
        android:layout_alignRight="@+id/hit_circle_03" />

    <Button
        android:id="@+id/hit_circle_07"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/memorize_hit_square_red"
        android:layout_alignLeft="@+id/hit_circle_04"
        android:layout_below="@+id/hit_circle_04"
        android:layout_marginTop="23dp" />

    <Button
        android:id="@+id/hit_circle_08"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/memorize_hit_square_red"
        android:layout_alignBaseline="@+id/hit_circle_07"
        android:layout_alignBottom="@+id/hit_circle_07"
        android:layout_alignLeft="@+id/hit_circle_05" />

    <Button
        android:id="@+id/hit_circle_09"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/memorize_hit_square_red"
        android:layout_alignBaseline="@+id/hit_circle_08"
        android:layout_alignBottom="@+id/hit_circle_08"
        android:layout_alignLeft="@+id/hit_circle_06" />

    <Button
        android:id="@+id/hit_circle_10"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/memorize_hit_square_red"
        android:layout_alignLeft="@+id/hit_circle_07"
        android:layout_below="@+id/hit_circle_07"
        android:layout_marginTop="24dp" />

    <Button
        android:id="@+id/hit_circle_11"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/memorize_hit_square_red"
        android:layout_alignBottom="@+id/hit_circle_10"
        android:layout_alignLeft="@+id/hit_circle_08" />

    <Button
        android:id="@+id/hit_circle_12"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/memorize_hit_square_red"
        android:layout_alignBottom="@+id/hit_circle_11"
        android:layout_alignRight="@+id/hit_circle_09" />

    <TextView
        android:id="@+id/hit_circle_counterdown"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="21dp"
        android:text="00"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>