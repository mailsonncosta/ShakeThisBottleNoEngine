<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shakeit_minigame"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ShakeITGameActivity" >

    <Button
        android:id="@+id/teste_fail"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="fail" />

    <Button
        android:id="@+id/teste_congrats"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_alignBaseline="@+id/teste_fail"
        android:layout_alignBottom="@+id/teste_fail"
        android:layout_alignParentLeft="true"
        android:text="congrats" />

    <TextView
        android:id="@+id/shakeit_test"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/teste_fail"
        android:layout_marginTop="64dp" />

    <Button
        android:id="@+id/garrafa"
        android:layout_width="150dp"
        android:layout_height="300dp"
        android:layout_alignTop="@+id/shakeit_test"
        android:layout_centerHorizontal="true"
        android:background="@drawable/garrafanormal" />

    <TextView
        android:id="@+id/counterdown_tx"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/shakeit_test"
        android:layout_below="@+id/shakeit_test" />

</RelativeLayout>