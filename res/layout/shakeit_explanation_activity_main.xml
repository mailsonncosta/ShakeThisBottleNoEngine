<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gameexplanation"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ShakeITExplanationActivity" >

    <Button
        android:id="@+id/btm_explanation_bt"
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/seta_esquerda" />

    <Button
        android:id="@+id/pass_explanation_bt"
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:layout_alignBaseline="@+id/btm_explanation_bt"
        android:layout_alignBottom="@+id/btm_explanation_bt"
        android:layout_alignParentRight="true"
        android:background="@drawable/seta_direita" />

</RelativeLayout>