<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MiniGameMenuActivity" >

    <TextView
        android:id="@+id/selectthegame_tx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fake_game_bt"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="46dp"
        android:text="SELECT THE GAME"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/shake_it_bt"
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="27dp"
        android:background="@drawable/shakeitbuttonno" />

    <Button
        android:id="@+id/fake_game_bt"
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:layout_alignBaseline="@+id/shake_it_bt"
        android:layout_alignBottom="@+id/shake_it_bt"
        android:layout_toRightOf="@+id/shake_it_bt"
        android:background="@drawable/hitit" />

    <Button
        android:id="@+id/memorizefast_bt"
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:layout_alignBaseline="@+id/fake_game_bt"
        android:layout_alignBottom="@+id/fake_game_bt"
        android:layout_toRightOf="@+id/fake_game_bt"
        android:background="@drawable/memo" />

    <Button
        android:id="@+id/Button02"
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:layout_below="@+id/selectthegame_tx"
        android:layout_toRightOf="@+id/memorizefast_bt"
        android:background="@drawable/shakeitbutton" />

    <Button
        android:id="@+id/Button03"
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:layout_alignLeft="@+id/shake_it_bt"
        android:layout_below="@+id/shake_it_bt"
        android:background="@drawable/shakeitbutton" />

    <Button
        android:id="@+id/Button04"
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:layout_alignLeft="@+id/fake_game_bt"
        android:layout_below="@+id/fake_game_bt"
        android:background="@drawable/shakeitbutton" />

    <Button
        android:id="@+id/Button05"
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:layout_alignBaseline="@+id/Button04"
        android:layout_alignBottom="@+id/Button04"
        android:layout_toLeftOf="@+id/Button02"
        android:background="@drawable/shakeitbutton" />

    <Button
        android:id="@+id/Button06"
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:layout_below="@+id/memorizefast_bt"
        android:layout_toRightOf="@+id/memorizefast_bt"
        android:background="@drawable/shakeitbutton" />

    <Button
        android:id="@+id/Button07"
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:layout_below="@+id/Button03"
        android:layout_toLeftOf="@+id/Button04"
        android:background="@drawable/shakeitbutton" />

    <Button
        android:id="@+id/Button08"
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:layout_alignBaseline="@+id/Button07"
        android:layout_alignBottom="@+id/Button07"
        android:layout_toLeftOf="@+id/Button05"
        android:background="@drawable/shakeitbutton" />

    <Button
        android:id="@+id/Button09"
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:layout_alignBaseline="@+id/Button08"
        android:layout_alignBottom="@+id/Button08"
        android:layout_toLeftOf="@+id/Button06"
        android:background="@drawable/shakeitbutton" />

    <Button
        android:id="@+id/Button10"
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:layout_below="@+id/Button05"
        android:layout_toRightOf="@+id/Button05"
        android:background="@drawable/shakeitbutton" />

</RelativeLayout>